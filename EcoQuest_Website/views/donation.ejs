<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/styles.css">
  <title>Donation - EcoQuest</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/home/<%= userId %>">EcoQuest</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/leaderboard/<%= userId  %>">Leaderboard</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/donation/<%= userId  %>">Donation</a>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/login">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Support Our Cause</h2></div>
    <br>
    <!-- Content for donation page goes here -->
    <!-- Donation Modal -->
    <div class="container">
        <br>
        <div class="row justify-content-center">
          <% for (let i = 0; i <  results.length; i++) { %>
            <div class="col-md-6 col-lg-4">
              <div class="card h-100 w-100"> <!-- Add the "h-100" and "w-100" classes to make all cards the same height and width -->
                <img src="/images/<%=  results[i].image %>" class="card-img-top" alt="appliance_image">
                <div class="card-body">
                  <h5 class="card-title"><%=  results[i].name %></h5>
                  <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#articleModal<%= i %>">Read More</a>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
  
    <!-- Article Modals -->
    <% for (let i = 0; i <  results.length; i++) { %>
        <div class="modal fade" id="articleModal<%= i %>" tabindex="-1" aria-labelledby="articleModalLabel<%= i %>" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="articleModalLabel<%= i %>"><%=  results[i].name %></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <img src="/images/<%=  results[i].image %>" class="card-img-top" alt="appliance_image">
                        <p class="card-text"><%=  results[i].donation_info_msg %></p>
                    </div>
                    <div class="modal-footer">
                        <div class="input-group"></div>
                        <form>
                            <input type="number" min="100" class="form-control" placeholder="Enter points to donate" required onchange="checkDonation()">
                            <a href="#" class="btn btn-primary">Donate!</a>
                        </form>
                        <p id="sgdValue" class="mt-2"></p>
                    </div>
                    <script>
                        function checkDonation() {
                            var points = document.querySelector('input[type="number"]').value;
                            if (points < 100) {
                                points = 100;
                                document.querySelector('input[type="number"]').value = points;
                            }

                            if (points % 1 !== 0) {
                                points = Math.floor(points);
                                document.querySelector('input[type="number"]').value = points;
                            }
                            var sgdValue = points / 100;
                            document.getElementById("sgdValue").textContent = "Equivalent SGD value: $" + sgdValue;
                            }
                            document.getElementById("donationForm").addEventListener("submit", function(event) {
                                event.preventDefault(); // Prevent the form from submitting normally

                            // Get the form data
                            var points = document.querySelector('input[type="number"]').value;

                            // Create a new FormData object and append the form data
                            var formData = new FormData();
                            formData.append("points", points);

                            // Send the form data to app.js using an AJAX request
                            var xhr = new XMLHttpRequest();
                            xhr.open("POST", "/donation/<%= userId %>/", true);
                            xhr.send(formData);

                            // Optional: Handle the response from app.js
                            xhr.onload = function() {
                                if (xhr.status === 200) {
                                // Request was successful
                                console.log(xhr.responseText);
                                } else {
                                // Request failed
                                console.error("Error:", xhr.status);
                                }
                            };
                            });
                    </script>
                </div>
            </div>
        </div>
    <% } %>
      </div>
  </div>
</body>
</html>