<!DOCTYPE html>
<html lang="en">
<head>
    <title>EcoQuest</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/home/<%= userId %>">EcoQuest</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/leaderboard/<%= userId %>">Leaderboard</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/donation/<%= userId %>">Donation</a>
            </li>
          </ul>
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <div class="dark-mode-toggle">
                <label class="switch">
                  <input type="checkbox" id="darkModeToggle">
                  <span class="slider round"></span>
                </label>
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  <div class="container">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <!-- Custom styles from home.ejs -->
  <style>
    /* Custom styles copied from home.ejs */
  </style>
  <title>Leaderboard - EcoQuest</title>
</head>
<body>
  <div class="container mt-5"></div>
    <h2 class="text-center mb-4">Leaderboard</h2>
    <% if (account.length > 0) { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Rank</th>
            <th>Username</th>
            <th>Total Points Donated</th>
          </tr>
        </thead>
        <tbody>
          <% let rank = 1; %>
          <% account.forEach(account => { %>
            <tr>
              <td><%= rank %></td>
              <td><%= account.username %></td>
              <td><%= account.points_donated %></td>
            </tr>
            <% rank++; %>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p class="text-center">No accounts to display.</p>
    <% } %>
  </div>


</body>
</html>
